{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:allow-default-urls",
    "opener:allow-open-url",
    "opener:allow-open-path",
    "opener:default",
    {
      "identifier": "http:default",
      "allow": [{ "url": "https://*" }, { "url": "http://*" }]
    },
    "dialog:default",
    "fs:default",
    "fs:allow-write-file",
    {
      "identifier": "fs:scope",         
      "allow": [
        { "path": "$HOME/**/*" },       
        { "path": "$DOWNLOAD/**/*" }    
      ]
    }
  ]
}
