{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "md2pdf-app",
  "version": "0.1.0",
  "identifier": "br.com.11tech.md2pdf",
  "build": {
    "frontendDist": "../public",
    "devUrl": null
  },
  "app": {
    "windows": [
      {
        "title": "Markdown -> HTML & PDF",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
